<Window
    x:Class="Prn221_Count_Down_Clock.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Prn221_Count_Down_Clock"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Countdown Timer"
    Width="500"
    Height="300"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <TextBlock x:Name="TimerTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" />
        <TextBox
            x:Name="InputSecondsTextBox"
            Width="100"
            Margin="0,0,0,30"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontSize="18" />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal">
            <Button x:Name="StartButton" Margin="5" Click="StartButton_Click" Content="Start" />
            <Button x:Name="StopButton" Margin="5" Click="StopButton_Click" Content="Stop" />
            <Button x:Name="ResetButton" Margin="5" Click="ResetButton_Click" Content="Reset" />
            <Button x:Name="Alarm" Margin="5" Click="Alarm_Click" Content="Alarm" />
        </StackPanel>
    </Grid>
</Window>
